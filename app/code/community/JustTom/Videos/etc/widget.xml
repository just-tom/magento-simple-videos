<?xml version="1.0"?>
<widgets>
    <justtom_videos_widget_video type="justtom_videos/widget_video">
        <name>Just Tom - Video</name>
        <description>SEO friendly video widget to place anywhere</description>
        <parameters>
            <enabled>
                <required>1</required>
                <visible>1</visible>
                <label>Enable/Disable</label>
                <type>select</type>
                <values>
                    <enabled>
                        <value>true</value>
                        <label>Enable</label>
                    </enabled>
                    <disabled>
                        <value>false</value>
                        <label>Disable</label>
                    </disabled>
                </values>
                <sort_order>0</sort_order>
            </enabled>
            <video_source>
                <required>1</required>
                <visible>1</visible>
                <label>Source of Video</label>
                <type>select</type>
                <source_model>justtom_videos/entity_attribute_source_videosource</source_model>
                <sort_order>5</sort_order>
            </video_source>
            <video_code>
                <required>1</required>
                <visible>1</visible>
                <label>Video URL Code</label>
                <description>Only input the code for the video in this input box (e.g. only the code after the url http://www.youtube.com/watch?v= or https://player.vimeo.com/video/)</description>
                <type>text</type>
                <sort_order>10</sort_order>
            </video_code>
            <video_width>
                <required>0</required>
                <visible>1</visible>
                <label>Video Width</label>
                <type>text</type>
                <sort_order>20</sort_order>
            </video_width>
            <video_height>
                <required>0</required>
                <visible>1</visible>
                <label>Video Height</label>
                <type>text</type>
                <sort_order>30</sort_order>
            </video_height>
            <placeholder_image>
                <required>0</required>
                <visible>1</visible>
                <label>Placeholder Image</label>
                <type>widgetimagechooser/chooser</type>
                <sort_order>40</sort_order>
            </placeholder_image>
            <schema_name>
                <required>1</required>
                <visible>1</visible>
                <label>Schema.org Video Name</label>
                <type>text</type>
                <sort_order>50</sort_order>
            </schema_name>
            <schema_description>
                <required>1</required>
                <visible>1</visible>
                <label>Schema.org Video Description</label>
                <type>text</type>
                <sort_order>60</sort_order>
            </schema_description>
            <schema_duration_minutes>
                <required>0</required>
                <visible>1</visible>
                <label>Schema.org Video Duration Minutes</label>
                <type>text</type>
                <sort_order>70</sort_order>
            </schema_duration_minutes>
            <schema_duration_seconds>
                <required>0</required>
                <visible>1</visible>
                <label>Schema.org Video Duration Seconds</label>
                <type>text</type>
                <sort_order>80</sort_order>
            </schema_duration_seconds>
        </parameters>
    </justtom_videos_widget_video>
</widgets>